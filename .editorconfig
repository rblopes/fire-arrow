root = true

# General Options
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# GDScript
[*.gd]
indent_size = 2
indent_style = tab

# JSON
[*.json]
indent_size = 2
indent_style = tab
insert_final_newline = false

# Markdown
[*.md]
indent_size = 2
